false val: INIDONE
: = ( var -- ) ( TS: val ) word swap ! ;
: inidef ( -- ) ( TS: name = val )
	word dup char } equal? if
		true ` INIDONE ! drop
	else
		variable word call
	end ;
: { ( -- ) true while inidef INIDONE not end ;
: inifile: ( -- ) ( TS: path )
	false ` INIDONE !
	word loadfile ;
