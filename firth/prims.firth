: ( char ) parse drop ; immediate // allow single-line paren-delimited  comments

// some basic arithmetic shortcuts
: 1+ ( n -- n+1 ) 1 + ;
: 2* ( n -- 2n ) 2 * ;

: nextword ( -- name ) char %s parse ; 
: defer ( -- ) nextword call ; immediate
: eval ( -- ... ) false compilemode nextword call true compilemode ; immediate
: [ ( -- ) false compilemode ; immediate
: ] ( -- ) true compilemode ;
